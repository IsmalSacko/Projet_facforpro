<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title> Supper Agence - {% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, user-scale=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/flatly/bootstrap.min.css">
        <link href="{{ asset('css/dataTables.min.css') }}" rel="stylesheet"/>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css">
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" id="agence" href="{{ path('agence') }}">Agence</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link " href="{{ path('homepage') }}">Notre Blog<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('ad_index')}}">Annonces !!</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('projets_realises-index')}}">Projets réalisés !!</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact_new')}}">Contacter nous !!</a>
                </li>
               {% if app.user %}
               <li class="nav-item">
                    <a class="nav-link" href="{{ path('ad_new')}}">Créer une annonce</a>
                </li>{% endif %}
                 
                {#<li class="nav-item">
                    <a class="nav-link" href="{{path('jeu')}}">Jeux</a>
                </li> #}
                {# <li class="nav-item">
                    <a class="nav-link" href="{{path('contact')}}">Nous Contacter</a>
                </li> #}
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('utilisateur_new')}}">Inscription</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_login')}}">Connexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Mon Compte !</a>
                </li>
            </ul>
            {#<form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>#}
        </div>
    </nav>
{#    Flashes messages#}
    {% for label, messages in app.flashes %}
        <div class="container mt-2" >
            <div class="alert alert-{{ label}}">
                {% for message in messages %}
                    {{ message | raw }}
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    {% block body %}    {% endblock %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
            <script>

                $(document).ready(  () => {
                    $('#myTable').DataTable();
                } );
            </script>
    </body>
</html>
